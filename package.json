{
  "name": "control-fiados",
  "version": "1.0.0",
  "description": "Aplicaci√≥n para control de fiados",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable --x64",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "build": {
    "appId": "com.controlfiados.app",
    "productName": "Control de Fiados",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/renderer/assets/icon.png",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "asar": true,
    "compression": "maximum"
  },
  "author": "Tu Nombre",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/plugin-transform-modules-commonjs": "^7.24.0",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/runtime": "^7.24.0",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "concurrently": "^9.1.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^3.4.17",
    "webpack": "^5.97.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "apexcharts": "^4.3.0",
    "chart.js": "^4.4.7",
    "chartist": "^1.3.0",
    "pdfkit": "^0.14.0"
  }
}
